@model CarShare.Models.Rent

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Fromularz</h1>

<h4>Wypożyczenia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Summary">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RentStartDate" class="control-label"></label>
                <input asp-for="RentStartDate" class="form-control" />
                <span asp-validation-for="RentStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentEndDate" class="control-label"></label>
                <input asp-for="RentEndDate" class="form-control" />
                <span asp-validation-for="RentEndDate" class="text-danger"></span>
            </div>
            <input asp-for="Car.Id" hidden />
            <div class="form-group">
                <input type="submit" value="Podsumowanie" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
